path multi (
    description "Allow multiple methods",
    method PUT|GET|POST,
    url /index2.html,
    use python:redbarrel.demos.misc.html,
    response-headers (
        set content-type "text/html"
    )
);

path dummy (
    description "Uses a Dummy function by default",
    url /dummy
);
